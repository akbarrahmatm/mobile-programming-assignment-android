<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/team_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/team_1"/>

        <ImageButton
            android:id="@+id/decreaseTeam1"
            style="@style/ScoreButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/minus_button"
            android:onClick="deceaseScore"
            android:src="@drawable/ic_minus" />

        <TextView
            android:id="@+id/mScoreText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/initial_count"
            android:textSize="@dimen/button_size" />

        <ImageButton
            android:id="@+id/increaseTeam1"
            style="@style/ScoreButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/minus_button"
            android:onClick="increaseScore"
            android:src="@drawable/ic_plus" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/team_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/team_2"/>

        <ImageButton
            style="@style/ScoreButton"
            android:id="@+id/decreaseTeam2"
            android:src="@drawable/ic_minus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/minus_button"
            android:onClick="deceaseScore"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"/>

        <TextView
            android:id="@+id/mScoreText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/initial_count"
            android:textSize="@dimen/button_size" />
        <ImageButton
            android:id="@+id/increaseTeam2"
            android:src="@drawable/ic_plus"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/minus_button"
            android:onClick="increaseScore"
            style="@style/ScoreButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"/>

    </RelativeLayout>


</LinearLayout>